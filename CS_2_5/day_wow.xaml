<UserControl x:Class="CS_2_5.day_wow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS_2_5"
             mc:Ignorable="d" Height="72" Width="108"
             Background="Transparent"
             MouseDown="UserControl_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="dateDay" FontSize="14" Grid.Row="0" Text="Default" TextAlignment="Center" VerticalAlignment="Center"/>
        <Image x:Name="blIcon" Source="/img/default.png" Grid.Row="1" Margin="12"/>
    </Grid>
</UserControl>
